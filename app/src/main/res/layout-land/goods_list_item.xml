<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layout_weight="1"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/article_tv"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Article"
                android:textSize="10sp"
                android:textStyle="normal" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="100dp"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/goods_iv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:longClickable="true"
                    android:padding="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_good_of_week"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/sale"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="350dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rlBox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:id="@+id/ivBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/box" />

                    <TextView
                        android:id="@+id/tvInBox"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="end"
                        android:text="10"
                        android:textColor="@color/purple_500"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlPackage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:id="@+id/ivPackage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/packet" />

                    <TextView
                        android:id="@+id/tvInPackage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="end"
                        android:text="10"
                        android:textColor="@color/purple_500"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/description_tv"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="4dp"
                    android:text="description"
                    android:textSize="10sp"
                    android:textStyle="normal" />


            </LinearLayout>


            <TextView
                android:id="@+id/brand_tv"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="brand"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/categories_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="categories"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/rrc_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="100 uah"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/opt_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textSize="10sp"
                android:visibility="gone"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/price_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Цена"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/present_cb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_background_red"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="100dp">

                <Button
                    android:id="@+id/decrease_btn"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:text="-" />

                <TextView
                    android:id="@+id/quantity_tv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/increment_btn"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:text="+" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.cardview.widget.CardView>